<resources>

    <style name="GroceryTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <!--We will be using the toolbar so no need to show ActionBar-->
        <item name="windowActionBar">false</item>
        <!-- Set theme colors from http://www.google.com/design/spec/style/color.html#color-color-palette-->
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/green</item>
        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/dark_green</item>
        <!-- colorAccent is used as the default value for colorControlActivated
             which is used to tint widgets -->
        <item name="colorAccent">@color/green</item>
        <!-- You can also set colorControlNormal, colorControlActivated
           colorControlHighlight and colorSwitchThumbNormal. -->
        <item name="actionOverflowButtonStyle">@style/OverflowMenuButton</item>
        <item name="android:buttonStyle">@style/ColoredButton</item>
        <item name="buttonStyle">@style/ColoredButton</item>
        <item name="colorButtonNormal">@color/dark_green</item>
        <item name="android:alertDialogTheme">@style/AlertDialogTheme</item>
    </style>

    <!-- TODO: Dump deprecated ShowcaseView library, maybe switch to MaterialShowcaseView? -->
    <style name="HoneydewTitle" parent="android:style/TextAppearance.Large">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="HoneydewShowcaseTheme" parent="ShowcaseView">
        <item name="sv_backgroundColor">#DD00A688</item>
        <item name="sv_titleTextAppearance">@style/HoneydewTitle</item>
    </style>

    <style name="OverflowMenuButton" parent="@android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_more_vertical_24dp</item>
    </style>

    <style name="ColoredButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryDark">@color/dark_green</item>
        <item name="colorAccent">@color/green</item>
    </style>

</resources>
